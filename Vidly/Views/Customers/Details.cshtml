@model Vidly.Models.Customer

@{ 
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<table>
    <tr>
        <td>Membership:</td>
        <td>@Model.MembershipType.Name</td>
    </tr>
    @if (Model.BirthDate != null) {
    <tr>
        <td>Birth Date:</td>
        <td>@Model.BirthDate.Value.ToString("dd.MM.yyyy")</td>
    </tr>
    }
</table>