@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <p>
        @Html.ActionLink("Add New Movie", "New", "Movies", new { }, new { @class = "btn btn-primary" })
    </p>
<table id="movies" class="table table-striped table-hover">
    <thead>
        <tr>
            <td>Movie</td>
            <td>Genre</td>
            <td>Release Date</td>
            <td>Delete</td>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts {
    <script>
        $(document).ready(function () {
            const table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: (data, type, movie) => {
                            return "<a href='/movies/edit/" + movie.id + "'>" + movie.name + "</a>";
                        }
                    },
                    {
                        data: "genre.name"
                    },
                    {
                        data: "releaseDate",
                        render: (data) => {
                            return data.substring(0, 4);
                        }
                    },
                    {
                        data: "id",
                        render: (data) => {
                            return "<button class='btn-link js-delete' data-movie-id='" + data + "'>Delete</button>";
                        }
                    }
                ]
            });

            $("#movies").on("click", ".js-delete", function () {
                const button = $(this);
                bootbox.confirm(
                    "Are you sure that you want to delete this movie?",
                    function (answer) {
                        if (answer) {
                            $.ajax({
                                url: "api/movies/" + button.attr("data-movie-id"),
                                method : "DELETE",
                                success: () => {
                                    table
                                        .row(button.parent("tr"))
                                        .remove()
                                        .draw();
                                }
                            });

                        }
                    });
            });

        });
    </script>
}